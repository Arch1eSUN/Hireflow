# =============================================
# HireFlow AI — Production Environment Variables
# Copy to .env and fill in ALL values before deployment
# =============================================

# ── Server ──
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# ── Database (PostgreSQL) ──
POSTGRES_USER=hireflow
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
POSTGRES_DB=hireflow_db
DATABASE_URL=postgresql://hireflow:CHANGE_ME_strong_password_here@postgres:5432/hireflow_db

# ── Security (REQUIRED, do NOT use defaults) ──
# JWT_SECRET must be at least 32 characters, cryptographically random
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_48
JWT_EXPIRES_IN=7d

# ENCRYPTION_KEY must be exactly 32 characters
ENCRYPTION_KEY=CHANGE_ME_generate_32_char_key!!

# ── CORS & URLs (REQUIRED in production) ──
# Comma-separated list of allowed origins
CORS_ORIGIN=https://portal.yourdomain.com,https://interview.yourdomain.com
APP_URL=https://api.yourdomain.com

# ── Cookies ──
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_SECURE=true

# ── Redis ──
REDIS_URL=redis://redis:6379

# ── S3 / MinIO (Object Storage) ──
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=CHANGE_ME_minio_access_key
S3_SECRET_KEY=CHANGE_ME_minio_secret_key
S3_BUCKET=hireflow-storage
S3_REGION=us-east-1

# ── AI Provider Keys (at least one required) ──
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=

# ── Email (SendGrid or SMTP) ──
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=
# EMAIL_FROM=noreply@yourdomain.com
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# ── Frontend URLs (for Vite build) ──
VITE_API_URL=https://api.yourdomain.com/api
VITE_WS_URL=wss://api.yourdomain.com/api/ws/interview/stream
VITE_INTERVIEW_APP_URL=https://interview.yourdomain.com

# ── Monitoring (optional) ──
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=production
